<%layout('layouts/boilerPlate')%>
    <%-include('../partials/navbar')%>
        <div class="row">
            <div class="col-6 mx-auto">

                <form action="/products" method="POST">
                    <div class="mb-3">
                        <label for="naam">Products's name:</label>
                        <input type="text" class="form-control" id="naam" name="name" placeholder="Ex. Air Jordan 5">
                    </div>
                    <div class="mb-3">
                        <label for="img">Products's Img:</label>
                        <input type="text" class="form-control" id="img" name="img" placeholder="Link of the img, Ex. https://">
                    </div>
                    
                    <div class="mb-3">
                        <label for="price">Products's Price:</label>
                        <input type="number" class="form-control" id="price" name="price" placeholder="How much does it cost?">
                    </div>
                    <div class="mb-3">
                        <label for="desc">Products's description:</label>
                        <textarea type="text" class="form-control" id="desc" name="desc" rows="3" placeholder="Ex. Limited Edition released by Nike in collaboration with Travis Scott"></textarea>
                    </div>
                    <button class="btn btn-success" type="submit">Add Product</button>
                </form>

            </div>
        </div>
    </body>
  </html>