<%layout('layouts/boilerPlate')%>
<%-include('../partials/navbar')%>

<div class="row">
  <% for(let item of products){ %>
    <div class="col-lg-3 mb-3">
      <div class="card shadow h-100" style="width: 15rem;">
        <img src="<%= item.img %>" class="card-img-top img-fluid" alt="..." style="object-fit: cover; height: 12rem;">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= item.name %></h5>
          <h3 class="card-text"><%= item.price %></h3>
          <p class="card-text flex-grow-1"><%= item.desc %></p>
          <a href="#" class="btn btn-primary mt-auto">View</a>
        </div>
      </div>
    </div>
  <% } %>
</div>
